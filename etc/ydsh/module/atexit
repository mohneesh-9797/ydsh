
let _TERM_HOOKS = new [(Int32, typeof($TERM_HOOK!))]()

function _defaultHook($s : Int32, $e : Any) {
    for $p in $_TERM_HOOKS {
        if ($p._0 and $s) > 0 {
            $p._1($s, $e)
        }
    }
}

function atexit($s : Int32, $h : typeof($TERM_HOOK!)) {
    if !$TERM_HOOK || $TERM_HOOK! != $_defaultHook {
        $_TERM_HOOKS.clear()
    }
    $TERM_HOOK = $_defaultHook
    if $h == $_defaultHook {
        return
    }
    $_TERM_HOOKS.add(($s, $h))
}
