# continue in while
var num = 0
while($true) {
    $num++
    if($num < 4) {
        continue
    }
    assert($num == 4)
    break
}

$num = 0
while($num < 5) {
    $num++
    if($num == 5) {
        continue
    }
}
assert($num == 5)


# continue in do-while
$num = 0
do {
    $num++
    if($num < 4) {
        continue
    }
    assert($num == 4)
    break
} while($true)

$num = 0
do {
    $num++
    if($num == 4) {
        continue
    }
} while($num < 4)
assert($num == 4)


# continue in for
var i = 0
for(; $i < 10; $i++) {
    continue
}
assert($i == 10)


# continue in for-in
$i = 0
var r = new Array<Int>()
for $a in [1, 2, 3, 4] {
    if($a % 2 == 0) {
        continue
    }
    $r.add($a)
}
assert($r.size() == 2)
assert($r[0] == 1)
assert($r[1] == 3)


# nested
$r = new Array<Int>()
while($r.size() < 4) {
    for(var i = 0; $i < 10; $i++) {
        if($i % 2 != 0) {
            continue
        }
        $r.add($i)
    }
}
assert($r.size() == 5)
assert($r[0] == 0)
assert($r[1] == 2)
assert($r[2] == 4)
assert($r[3] == 6)
assert($r[4] == 8)