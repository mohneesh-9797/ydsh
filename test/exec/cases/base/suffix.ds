# suffix increment/decrement
# global variable
var a = 0
$a++
assert($a == 1)
$a--
assert($a == 0)

var s = "he"
$s++
assert($s == "he1")

var f = 12.0
$f++
assert($f == 13)

# local
{
    var a = 0
    $a++
    assert($a == 1)
    $a--
    assert($a == 0)

    var s = "he"
    $s++
    assert($s == "he1")

    var f = 12.0
    $f++
    assert($f == 13)
}

# field
var t = (0, 1.2, "a")
$t._0++
$t._1++
$t._2++

assert($t._0 == 1)
assert($t._1 == 2.2)
assert($t._2 == "a1")

# indexer
var i = [0]
$i[0]++
assert($i[0] == 1)
$i[0]--
assert($i[0] == 0)