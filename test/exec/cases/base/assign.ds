# global
var a = 0
$a += 1
assert($a == 1)
$a *= 2
assert($a == 2)
$a /= 2
assert($a == 1)
$a %= 1
assert($a == 0)
$a -= 1
assert($a == -1)

var b = 1i64
$b *= 99
assert($b == 99)

# local
{
    var a = 0
    $a += 1
    assert($a == 1)
    $a *= 2
    assert($a == 2)
    $a /= 2
    assert($a == 1)
    $a %= 1
    assert($a == 0)
    $a -= 1
    assert($a == -1)

    var b = 1u16
    $b += 789
    assert($b == 790)
}

# field
var t = (0, 12i16, 4u64)
$t._0 += 1
assert($t._0 == 1)
$t._0 *= 2
assert($t._0 == 2)
$t._0 /= 2
assert($t._0 == 1)
$t._0 %= 1
assert($t._0 == 0)
$t._0 -= 1
assert($t._0 == -1)

$t._1 -= 10
assert($t._1 == 2)
$t._2 /= 4
assert($t._2 == 1u64)


# indexer
var i = [0]
$i[0] += 1
assert($i[0] == 1)
$i[0] *= 2
assert($i[0] == 2)
$i[0] /= 2
assert($i[0] == 1)
$i[0] %= 1
assert($i[0] == 0)
$i[0] -= 1
assert($i[0] == -1)

var w = ["a" : 1b]
$w["a"] += 23
assert($w["a"] == 24u)