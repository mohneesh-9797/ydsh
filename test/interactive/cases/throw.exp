#!/usr/bin/env expect

# throw exception, but not terminate.
#@status: 1

set bin_name [lindex $argv 0]
spawn ${bin_name} --norc --quiet

set CTRLD \004

expect {
    -re "\\$ $" {
        send "1 / 0\r"
    }
    default {
        send_error "mismatch prompt"
        exit 127
    }
}

expect {
    "\[runtime error\]" {
    }
    default {
        send_error "mismatch"
    }
}

expect {
    -re "\\$ $" {
        send $CTRLD
    }
    default {
        send_error "mismatch prompt"
        exit 127
    }
}

expect default
catch wait result
set os_error [ lindex $result 2 ]
if { $os_error == -1 } {
    send_error "execution failed"
    exit 127
}
set status [ lindex $result 3]
exit $status
