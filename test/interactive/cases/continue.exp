#!/usr/bin/env expect

# line continuation

set bin_name [lindex $argv 0]
spawn ${bin_name} --norc

set CTRLD \004

expect {
    -re "\\$ $" {
        send "echo \\\r"
    }
    default {
        send_error "mismatch first prompet"
        exit 1
    }
}

expect {
    -re "> $" {
        send "hello\r"
    }
    default {
        send_error "must be seconadary prompt"
        exit 1
    }
}

expect {
    "hello" {
    }
    default {
        send_error "mismatch"
        exit 1
    }
}

expect {
    -re "\\$ $" {
        send $CTRLD
    }
    default {
        send_error "mismatch prompt"
        exit 1
    }
}

expect default
catch wait result
set os_error [ lindex $result 2 ]
if { $os_error == -1 } {
    send_error "execution failed"
    exit 1
}
set status [ lindex $result 3]
exit $status
